{
    "name": "VueJS Devcontainer",
    "build": {
      "dockerfile": "Dockerfile",
      "context": "."
    },
    "customizations": {
      "vscode": {
        "extensions": [
          "dbaeumer.vscode-eslint",
          "esbenp.prettier-vscode",
          "mubaidr.vuejs-extension-pack"
        ],
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      }
    },
    "forwardPorts": [3080],
    "workspaceFolder": "/workspaces",
    "remoteUser": "node"
  }